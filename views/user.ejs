<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="row">
      <form class="" action="" method="post">
        <label >Email</label><br>
        <input type="text" name="email"><br>
        <input type="submit" name="" value="Save">
      </form>
    </div>
    <div class="row">
      <table border="1">
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
        <% for(let i = 0; i < users.length; i++){ %>
          <tr>
            <td><%= users[i].id %></td>
            <td><%= users[i].email %></td>
            <td>
              <a href="/users/update/<%= users[i].id %>">Update</a>
              <a href="/users/delete/<%= users[i].id %>" onclick="return confirm('Are you sure?')"> Delete</a>
            </td>
          </tr>
        <% } %>
      </table>
    </div>
  </body>
</html>
