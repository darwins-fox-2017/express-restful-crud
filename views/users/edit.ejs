    <!-- Page Contents -->
    <div class="pusher">
        <div class="ui vertical stripe segment">
            <div class="ui middle aligned stackable grid container">
                <div class="row">
                    <div class="eight wide column">
                        <h3 class="ui header">Create new User</h3>
                        <form class="ui form wide" action="/users/<%= user.id%>/update" method="post" >
                            <div class="field">
                                <label>Name</label>
                                <input name="name" placeholder="Name" type="text" value="<%= user.name%>">
                            </div>
                            <div class="field">
                                <label>Email</label>
                                <input name="email" placeholder="Email" type="email" value="<%= user.email %>">
                            </div>
                            <button class="ui button" type="submit">Update User</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
