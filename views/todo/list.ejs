<!DOCTYPE html>
<html>
<head>
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>
</head>
<body>

<h2>user id : <%=userId%>| user name : <%=userName%></h2>

<table>
  <tr>
    <th>id</th>
    <th>title</th>
    <th>completed</th>
    <th>complete at</th>
    <th>action</th>
  </tr>
  <% dataTodo.forEach(function(todo){ %>
    <tr>
      <td><%=todo.id %></td>
      <td><%=todo.title %></td>
      <td><% if(todo.iscompleate==true){ %>
          <input type="checkbox" name="completed" value=true checked>
        <% }else{%>
          <input type="checkbox" name="completed" value=true >
        <%}; %>
      </td>
      <td><%=helper.tanggal(todo.completeAt) %></td>
      <td><a href="/todo/<%=userId%>/<%=userName%>/<%=todo.id%>/edit"> edit</a><a href='/todo/<%=todo.id%>/delete' onclick="return confirm('Are you sure you want to delete this item?')"> delete</a></td>
    </tr>
  <% }); %>

</table>
<h2><a href="/todo/<%=userId%>/<%=userName%>/create">add task</a></h2>

</body>
</html>
