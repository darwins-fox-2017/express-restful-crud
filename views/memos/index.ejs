<!DOCTYPE html>
<html>
  <head>
    <title>Show memos</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Data Memos </h1>
    <p>Welcome to Memo's</p>
    <table style="width:100%" border="1">
      <tr>
        <th>No</th>
        <th>Memo</th>
        <th>Complete</th>
        <th>User</th>
        <th>E-mail</th>
        <th>Created Date</th>
        <th>Action</th>
      </tr>
      <% let count = 1 %>
      <% result.forEach(function(item){ %>
      <tr>
        <td><%= count %></td>
        <td><%= item.title %></td>
        <td>
          <% if(item.is_complete == true) { %>
            <input type="checkbox" name="is_complete" checked>
          <% } else { %>
            <input type="checkbox" name="is_complete" value="true">
          <% } %>
        </td>
        <td><%= item.User.first_name %></td>
        <td><%= item.User.email %></td>
        <td><%= helper.converse(item.createdAt) %></td>
        <td><a href='/memos/edit/<%= item.id %>'>[edit]</a> - <a href='/memos/delete/<%= item.id %>'>[delete]</a></td>
      </tr>
      <% count++ %>
      <% }); %>
    </table>
    <br>
    <h4><a href="/memos/create">Tambah Data</a></h4>
  </body>
</html>
