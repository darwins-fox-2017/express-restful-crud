<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <h1><%= title %></h1>
    <form>
      <a href="/add/" class="btn btn-default">Add</a> </button>
    </form>

    <table class="table">
      <thead>
        <tr>
          <th>No</th>
          <th>TITLE</th>
          <th>COMPLETED</th>
          <th>EMAIL</th>
          <th>CREATED AT</th>
          <th>ACTION</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i=0;i < todo.length;i++) { %>
        <tr>
          <th scope="row"> <%= i + 1 %> </th>
          <td><%= todo[i].title %></td>
          <td><%= todo[i].is_complete %></td>
          <!-- <td><%= JSON.stringify(todo[i].toJSON()) %></td> -->
          <td><%= (todo[i].User) ? todo[i].User.email : 'telah terhapus' %></td>
          <td><%= todo[i].createdAt %></td>
          <td><a href="/update/<%= todo[i].id %>" class="btn btn-info">update</a>
             <a href="/delete/<%= todo[i].id %>" onclick="return confirm('hapus title: <%= todo[i].title %>')" class="btn btn-danger">delete</a> </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
